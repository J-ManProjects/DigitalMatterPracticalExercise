@page
@model DigitalMatterPracticalExercise.Pages.FirmwarePages.IndexModel

@{
    ViewData["Title"] = "Firmware";
}

<h1>Firmware</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Firmware[0].Version)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Firmware[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Firmware[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Firmware[0].DeviceId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Firmware) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Version)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeviceId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
